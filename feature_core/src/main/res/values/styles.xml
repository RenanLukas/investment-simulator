<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Simulator" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TitleInput" parent="Theme.Simulator" />

    <style name="TitleInput.TextView">
        <item name="android:textSize">@dimen/fontSizeTitle</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TitleInput.EditText" parent="TextAppearance.AppCompat.Display2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="colorControlNormal">@color/hint</item>
    </style>

    <style name="MainButton">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/marginDefault</item>
        <item name="android:paddingBottom">@dimen/marginDefault</item>
        <item name="android:background">@drawable/selector_main_button</item>
    </style>
</resources>